{# templates/admin/my_dashboard.html.twig #}
{% extends '@EasyAdmin/layout.html.twig' %}

  {% block main %}
      <main>
      <span> 
        <h4> <i class="fa-solid fa-gauge me-2"></i>{{ 'admin_dashboard' | trans(domain: 'admin') }}</h4>
        
        <div class="row">  
          <div class="col">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">{{ 'spaceships' | trans(domain: 'spaceship') }}</h5>
                <p class="card-text">{{ 'latest_ships' | trans(domain: 'spaceship') }}
                  <span>({{ latest_ships|length }})</span>
                
                </p>
              <div class="row my-3">
                  {% for spaceship in latest_ships %}
                  <div class="col ">
                    <div class="card h-100">
                      <img src="{{ spaceship.image }}" class="card-img-top object-fit-cover h-50 " alt="ship_img">
                      <div class="card-body">
                        <h5 class="card-title">{{ spaceship.name }}</h5>
                        <div class="card-text">
                          {{ spaceship.description }}
                          </div>
                      </div>
                    </div>
                  </div>          
                  {% endfor %}
              </div>
                <a href="{{ spaceship_crud_url }}" class="btn btn-primary">{{ 'manage' | trans(domain: 'admin') }}</a>
              </div>
            </div>
          </div>
      </main>
  {% endblock main %}